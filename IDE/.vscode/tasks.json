{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Configure",
            "command": "./configure",
            "options": {
                "cwd": "${workspaceFolder}/src"
            }
        },
        {
            "type": "shell",
            "label": "Make",
            "command": "make -sj4",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}